<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/primaryLightColor"
    android:layout_marginBottom="@dimen/dimen_16dp"
    >


    <TextView
        android:id="@+id/preference_header"
        style="@style/TextHeadline5"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/chicken"/>
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/preference_description"
        style="@style/TextBody2"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="please choose from below"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        tools:background="@color/white"
        tools:layout_height="50dp">

        <android.support.design.chip.ChipGroup
            android:id="@+id/preference_chip_group"
            style="@style/GeneralChipGroupStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
