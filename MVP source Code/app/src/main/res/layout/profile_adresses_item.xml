<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/addressName"
        style="@style/TextHeadline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawablePadding="@dimen/dimen_16dp"
        android:drawableStart="@drawable/ic_round_work_24px"
        android:text="Work Address"/>

    <Switch
        android:checked="true"
        android:id="@+id/default_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/addressName"/>

    <TextView
        android:id="@+id/address_describtion"
        style="@style/TextBody2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressName"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="Amman Jordan 123 Street Airport 235  Amman Jordan 123 Street Airport 235 Building "
        />

    <android.support.design.button.MaterialButton
        android:id="@+id/address_edit"
        style="@style/ButtonStyleUnelevated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/address_describtion"
        android:layout_marginTop="8dp"
        android:text="edit"/>

    <android.support.design.button.MaterialButton
        android:id="@+id/address_delete"
        style="@style/TextButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_describtion"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/address_edit"
        android:text="delete"/>

</RelativeLayout>