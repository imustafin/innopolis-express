<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/imgAddressIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_drawer" />

        <TextView
            android:id="@+id/txtAddressTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextHeadline6"
            android:padding="8dp"
            android:layout_weight="1"
            android:text="WorkAddreess"/>


        <Switch
            android:id="@+id/btnSwitchAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/txtAddressDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextSubtitle1"
        android:layout_marginEnd="@dimen/big_margin_50"
        android:padding="8dp"
        android:text="bla blabl bab bla bla bla bla bla blabl bab bla bla bla bla bla bal bal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        >
        <Button
            android:id="@+id/btnAddressDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginEnd="8dp"
            android:text="@string/delete"/>
        <Button
            android:id="@+id/btnAddressEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@color/btn_bg_color"
            android:text="@string/edit"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        />

</LinearLayout>
